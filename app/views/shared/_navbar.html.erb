<div class="container">
  <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">

      </div>
      <div class="col-4 text-center">
        <%= link_to 'Rails Blog', "/home", class: 'blog-header-logo text-dark' %>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <% if user_signed_in? %>
          <%= link_to 'New Article', new_article_path, class: 'btn btn-sm btn-outline-primary me-2' %>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-outline-secondary' %>
        <% else %>
          <%= link_to 'Register', new_user_registration_path, class: 'btn btn-sm btn-outline-secondary mx-2' %>
          <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-sm btn-outline-secondary' %>
        <% end %>
      </div>
    </div>
  </header>
</div>